<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:client="http://www.xiaosan.com/common/client"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
http://www.xiaosan.com/common/client http://www.xiaosan.com/common/client/client-1.0.xsd">

	<!-- 基本环境配置 -->

	<bean
		class="org.springframework.context.support.ConversionServiceFactoryBean" />

	<!-- 配置文件载入配置 -->
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>client.properties</value>
			</list>
		</property>
	</bean>


	<context:annotation-config />

	<bean id="ClientParse" class="com.xiaosan.socket.serializing.SerializerHelper">
		<property name="location" value="message.xml" />
	</bean>

	<client:config id="client1" parse="ClientParse" />

	<bean id="ClientConfig" class="com.xiaosan.client.core.ClientConfig">
		<property name="hostName" value="${client.default.address}" />
		<property name="port" value="${client.default.port}" />
	</bean>
</beans>